{
  "name": "zoneweaver",
  "version": "0.7.7",
  "description": "Zoneweaver API - NodeJS backend and Vite based frontend",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "sync-versions": "node scripts/sync-versions.js",
    "generate-docs": "node scripts/generate-docs.js",
    "prebuild": "npm run sync-versions",
    "build": "cd web && npm run build",
    "start": "npm run build && node index.js",
    "dev": "npm run build && nodemon index.js",
    "local-api": "nodemon index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:backend": "eslint . --ignore-pattern 'web/**'",
    "lint:frontend": "cd web && npm run lint",
    "lint:frontend:fix": "cd web && npm run lint:fix",
    "lint:all": "npm run lint:backend && npm run lint:frontend",
    "lint:fix:all": "npm run lint:fix && npm run lint:frontend:fix"
  },
  "keywords": [
    "bhyve",
    "react",
    "nodejs"
  ],
  "author": "Makr91",
  "license": "GPL-3.0",
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "connect-session-sequelize": "^8.0.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.1",
    "express-session": "^1.17.3",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.4.5",
    "multer": "^2.0.2",
    "mysql2": "^3.6.0",
    "nodemailer": "^7.0.10",
    "nodemon": "^3.1.9",
    "openid-client": "^6.7.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-ldapauth": "^3.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.8.0",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.17.1",
    "yaml": "^2.3.4"
  },
  "overrides": {
    "rollup": "@rollup/wasm-node"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@rollup/wasm-node": "^4.46.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2"
  }
}
