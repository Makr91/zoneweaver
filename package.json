    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.9",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
