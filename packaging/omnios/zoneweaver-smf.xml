<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<!--
    SMF manifest for ZoneWeaver Zone Hypervisor Management Interface
-->
<service_bundle type='manifest' name='zoneweaver'>
  <service name='system/virtualization/zoneweaver' type='service' version='1'>
    <create_default_instance enabled='false'/>
    <single_instance/>
    
    <!-- Dependencies -->
    <dependency name='filesystems' grouping='require_all' restart_on='none' type='service'>
      <service_fmri value='svc:/system/filesystem/local:default'/>
    </dependency>
    
    <dependency name='network' grouping='require_all' restart_on='none' type='service'>
      <service_fmri value='svc:/milestone/network:default'/>
    </dependency>
    
    <!-- Start method -->
    <exec_method name='start' type='method' exec='/opt/zoneweaver/startup.sh' timeout_seconds='60'>
      <method_context working_directory='/opt/zoneweaver'>
        <method_credential user='zoneweaver' group='zoneweaver' 
            privileges='basic,net_privaddr,file_dac_read' />
        <method_environment>
          <envvar name='PATH' value='/opt/ooce/bin:/opt/ooce/node-22/bin:/usr/gnu/bin:/usr/bin:/usr/sbin:/sbin'/>
          <envvar name='NODE_ENV' value='production'/>
          <envvar name='CONFIG_PATH' value='/etc/zoneweaver/config.yaml'/>
          <envvar name='HOME' value='/var/lib/zoneweaver'/>
        </method_environment>
      </method_context>
    </exec_method>
    
    <!-- Stop method -->
    <exec_method name='stop' type='method' exec='/opt/zoneweaver/shutdown.sh' timeout_seconds='30'>
      <method_context working_directory='/opt/zoneweaver'>
        <method_credential user='zoneweaver' group='zoneweaver' />
        <method_environment>
          <envvar name='PATH' value='/opt/ooce/bin:/opt/ooce/node-22/bin:/usr/bin:/usr/sbin:/sbin'/>
        </method_environment>
      </method_context>
    </exec_method>
    
    <!-- Refresh method -->
    <exec_method name='refresh' type='method' exec=':kill -HUP' timeout_seconds='30' />
    
    <!-- Stability -->
    <stability value='Evolving' />
    
    <!-- Service description -->
    <template>
      <common_name>
        <loctext xml:lang='C'>ZoneWeaver Zone Hypervisor Management Interface</loctext>
      </common_name>
      <description>
        <loctext xml:lang='C'>
          Web-based management interface for WebHyve zone hypervisors.
          Provides intuitive control over zones, networking, and storage
          through a modern React frontend and Node.js API backend.
        </loctext>
      </description>
      <documentation>
        <manpage title='zoneweaver' section='8' />
        <doc_link name='ZoneWeaver Project'
                  uri='https://github.com/Makr91/zoneweaver' />
      </documentation>
    </template>
  </service>
</service_bundle>
